<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="enterBtnStyle">
        <item name="android:text">@string/homepageEnterString</item>
        <item name="android:textColor">@color/textColorRed</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="secondScreenDetailStyle">
        <item name="android:text">@string/realStateSummary</item>
        <item name="android:textColor">@color/textColorBlack</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>