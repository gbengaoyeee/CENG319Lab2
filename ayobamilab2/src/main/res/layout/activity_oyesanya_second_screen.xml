<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textColorWhite"
    tools:context=".OyesanyaSecondScreen">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/updatedSecondScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="2sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <CheckBox
            android:id="@+id/checkbox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/homeImage1"
            app:layout_constraintEnd_toStartOf="@+id/homeImage1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/homeImage1" />

        <CheckBox
            android:id="@+id/checkbox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/homeImage2"
            app:layout_constraintEnd_toStartOf="@+id/homeImage2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/homeImage2" />

        <CheckBox
            android:id="@+id/checkbox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/homeImage3"
            app:layout_constraintEnd_toStartOf="@+id/homeImage3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/homeImage3" />

        <CheckBox
            android:id="@+id/checkbox4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/homeImage4"
            app:layout_constraintEnd_toStartOf="@+id/homeImage4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/homeImage4" />

        <ImageView
            android:id="@+id/homeImage1"
            android:layout_width="103dp"
            android:layout_height="97dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/apartment1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/homeImage2"
            android:layout_width="103dp"
            android:layout_height="97dp"
            android:layout_marginTop="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/apartment1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/homeImage1"
            app:layout_constraintTop_toBottomOf="@+id/homeImage1"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/homeImage3"
            android:layout_width="103dp"
            android:layout_height="97dp"
            android:layout_marginTop="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/apartment1"
            app:layout_constraintStart_toStartOf="@+id/homeImage2"
            app:layout_constraintTop_toBottomOf="@+id/homeImage2" />

        <ImageView
            android:id="@+id/homeImage4"
            android:layout_width="103dp"
            android:layout_height="97dp"
            android:layout_marginTop="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/apartment1"
            app:layout_constraintStart_toStartOf="@+id/homeImage3"
            app:layout_constraintTop_toBottomOf="@+id/homeImage3" />

        <TextView
            android:id="@+id/address1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="address"
            android:textSize="17sp"
            app:layout_constraintStart_toEndOf="@+id/homeImage1"
            app:layout_constraintTop_toTopOf="@+id/homeImage1" />

        <TextView
            android:id="@+id/price1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="$500,000"
            app:layout_constraintBottom_toBottomOf="@+id/homeImage1"
            app:layout_constraintStart_toStartOf="@+id/address1"
            app:layout_constraintTop_toBottomOf="@+id/address1" />

        <TextView
            android:id="@+id/address2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="address"
            android:textSize="17sp"
            app:layout_constraintStart_toEndOf="@+id/homeImage2"
            app:layout_constraintTop_toTopOf="@+id/homeImage2" />

        <TextView
            android:id="@+id/price2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="$500,000"
            app:layout_constraintBottom_toBottomOf="@+id/homeImage2"
            app:layout_constraintStart_toStartOf="@+id/address2"
            app:layout_constraintTop_toBottomOf="@+id/address2" />

        <TextView
            android:id="@+id/address3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="address"
            android:textSize="17sp"
            app:layout_constraintStart_toEndOf="@+id/homeImage3"
            app:layout_constraintTop_toTopOf="@+id/homeImage3" />

        <TextView
            android:id="@+id/price3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="$500,000"
            app:layout_constraintBottom_toBottomOf="@+id/homeImage3"
            app:layout_constraintStart_toStartOf="@+id/address3"
            app:layout_constraintTop_toBottomOf="@+id/address3" />

        <TextView
            android:id="@+id/address4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="address"
            android:textSize="17sp"
            app:layout_constraintStart_toEndOf="@+id/homeImage4"
            app:layout_constraintTop_toTopOf="@+id/homeImage4" />

        <TextView
            android:id="@+id/price4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="$500,000"
            app:layout_constraintBottom_toBottomOf="@+id/homeImage4"
            app:layout_constraintStart_toStartOf="@+id/address4"
            app:layout_constraintTop_toBottomOf="@+id/address4" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/initialSecondScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Real State"
            android:textColor="@color/textColorBlack"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/textView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.24000001" />

        <TextView
            android:id="@+id/textView"
            style="@style/secondScreenDetailStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintVertical_bias="0.100000024" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>